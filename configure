#!/bin/bash

if [ ! $(which pip) ]
then
	echo Installing missing: pip
	sudo easy_install pip
fi

if [ ! $(which virtualenv) ]
then
	echo Installing missing: virtualenv
	sudo pip install virtualenv
fi

if [ ! -d env ]
then
	virtualenv env
fi

echo "In order to start the environment please execute the following commands:"
echo "    . env/bin/activate"
echo "    pip install -r pip.requirements"
echo
